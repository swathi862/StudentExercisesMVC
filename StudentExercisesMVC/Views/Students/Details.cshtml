@model StudentExercisesMVC.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="border-info">
    <hr />
    <h2> @Model.FirstName @Model.LastName</h2><br/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SlackHandle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SlackHandle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CohortId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CohortId) | @Model.Cohort.Name
        </dd>
        <dt class = "col-sm-2">
            Assigned Exercises
        </dt>
        <dd class = "col-sm-10">
            <ul>
                @foreach (var exercise in @Model.assignedExercises)
                {
                    <li>@Html.DisplayFor(student => exercise.Name) | @exercise.Language</li>
                }
            </ul> 
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
